# Data Process Demo 
# This script will create demo environment
# for Adanvaced Data Analtyics

# Set Resource Group Name
## e.g. rgName=bigdata-demo-rg
rgName=bigdata-demo-rg
# Set Region
## e.g. loc=westus
## ADLS or ADLA are supported eastus2,northeurope,centralus
loc=eastus2

# Tags
myTags="Env=demo"
echo $rgName, $myTags
# Create Resource Group
az group create --name $rgName --location $loc --tags $myTags

